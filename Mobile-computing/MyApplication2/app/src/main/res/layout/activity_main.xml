<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- HEADER / TOOLBAR (Requirement 4: AppBar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp" />

    <!-- FOOTER BUTTON (Requirement 5: Event Wire Source) -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/btnGreen"
        android:text="NEXT: Guest details"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"/>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/btnNext"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- ========================= -->
            <!-- CARD 1: DEPART -->
            <!-- ========================= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/colorWhite"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Flight Header (Gray) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_card_header"
                        android:paddingHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Depart"
                                android:textColor="@color/colorTextLight"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓"
                                android:textColor="@android:color/holo_green_light"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:tint="@color/colorWhite" />
                    </RelativeLayout>

                    <!-- Flight Details Body -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Route Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Origin -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KUL"
                                    android:textSize="32sp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textStyle="normal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kuala Lumpur International\nAirport 2 (klia2)"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>

                            <!-- Plane Icon -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/stat_sys_plane_flight_mode"
                                app:tint="@color/colorTextSecondary"
                                android:layout_gravity="center"
                                android:rotation="90"/>

                            <!-- Dest -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DPS"
                                    android:textSize="32sp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textStyle="normal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Denpasar Ngurah Rai\nInternational Airport"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Times & Price -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:paddingBottom="16dp"
                            android:background="@drawable/abc_list_divider_material">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0925"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorTextPrimary"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" ✈ KUL"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>

                                    <View android:layout_width="16dp" android:layout_height="0dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1230"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorTextPrimary"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" ✈ DPS"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="03H05M    QZ 551"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="522"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="2dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MYR"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"
                                        android:textSize="10sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Upgrade Option (Purple Box) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_upgrade_selected"
                            android:padding="12dp"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Upgrade to Premium Flex"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+321"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MYR"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="10sp"
                                    android:layout_marginStart="2dp"/>

                                <!-- Circle Check Button -->
                                <FrameLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/bg_green_button"
                                    android:backgroundTint="#4CAF50"
                                    android:layout_marginStart="8dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="✓"
                                        android:textColor="@color/colorWhite"
                                        android:layout_gravity="center"/>
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ 20kg baggage\n✓ Free Hot Seats Selection\n✓ 1 complimentary meal\n✓ 2 times flight date/time changes..."
                                android:textColor="@color/colorWhite"
                                android:textSize="12sp"
                                android:layout_marginTop="8dp"
                                android:lineSpacingExtra="2dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========================= -->
            <!-- CARD 2: RETURN -->
            <!-- ========================= -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/colorWhite"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Flight Header (Gray) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_card_header"
                        android:paddingHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Return"
                                android:textColor="@color/colorTextLight"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓"
                                android:textColor="@android:color/holo_green_light"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:tint="@color/colorWhite" />
                    </RelativeLayout>

                    <!-- Flight Details Body -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Route Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Origin -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DPS"
                                    android:textSize="32sp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textStyle="normal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Denpasar Ngurah Rai\nInternational Airport"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>

                            <!-- Plane Icon -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/stat_sys_plane_flight_mode"
                                app:tint="@color/colorTextSecondary"
                                android:layout_gravity="center"
                                android:rotation="90"/>

                            <!-- Dest -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KUL"
                                    android:textSize="32sp"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textStyle="normal"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kuala Lumpur International\nAirport 2 (klia2)"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Times & Price -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:paddingBottom="16dp"
                            android:background="@drawable/abc_list_divider_material">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0600"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorTextPrimary"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" ✈ DPS"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>

                                    <View android:layout_width="16dp" android:layout_height="0dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0900"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorTextPrimary"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" ✈ KUL"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="03H00M    QZ 550"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorTextSecondary"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="bottom">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="229"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorTextPrimary"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="2dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MYR"
                                        android:textSize="10sp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"
                                        android:textSize="10sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Upgrade Option (Purple Box) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_upgrade_selected"
                            android:padding="12dp"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Upgrade to Premium Flex"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+321"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MYR"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="10sp"
                                    android:layout_marginStart="2dp"/>

                                <!-- Circle Button -->
                                <FrameLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@android:drawable/btn_default_small"
                                    android:backgroundTint="#CCCCCC"
                                    android:layout_marginStart="8dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+"
                                        android:textColor="@color/colorTextPrimary"
                                        android:layout_gravity="center"/>
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>